@using Assignment2.Models.Entities
@model SnakeRegion

@{
    var snake = Model!.Snake;
    var region = Model!.Region;
    ViewData["Title"] = $"Assigning region to {snake!.Name}" +
        $" for region {region!.RegionName}";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRegion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@Model!.Id" />
            <input type="hidden" name="snakeId" value="@snake!.Id" />
            <div class="form-group">
                <label asp-for="RegionName" class="control-label"></label>
                <select asp-for="RegionName" class="form-select">
                    <option value="U">Ungraded</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="A">F</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign Grade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Snake" 
        asp-route-id="@snake!.Id">Back to snake Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
