@using Assignment2.Models.Entities
@model IEnumerable<Region>

@{
    var snake = (Snake?)ViewData["Snake"];
    ViewData["Title"] = 
        $"Register Region for {snake!.Name}";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegionName)
                    </td>
                    <td>
                        <a asp-action="Create" asp-controller="SnakeRegion"
                            asp-route-id="@snake!.Id" 
                            asp-route-regionId="@item.RegionId">Register</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Details" asp-controller="Snake" asp-route-id="@snake.Id">Back to Snake Details</a>
</div>
